# Production Environment Configuration
# Copy this file to .env on your droplet and update the values

# Environment mode
NAME=production
ENV=production
VERSION=1.0

# Host and Port
IDENTIFIER=RUNNERCOIN
HOST=https://api.runnercoin.lat
PORT=3000

# Session Management
SESSION_KEY=your-secure-session-key-here
SESSION_DOMAIN=api.runnercoin.lat

# Database Configuration (MySQL)
DATABASE_HOST=mysql
DATABASE_USER=runner_user
DATABASE_PORT=3306
DATABASE_PASSWORD=your-secure-db-password-here
DATABASE_NAME=runnercoin_db
DATABASE_SSL=false

# MySQL Root Password (for Docker)
MYSQL_ROOT_PASSWORD=your-secure-root-password-here

# API Keys
NEYNAR_API_KEY=your-neynar-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Digital Ocean Spaces (if using)
DIGITAL_OCEAN_SPACES_KEY=your-do-spaces-key-here
DIGITAL_OCEAN_SPACES_SECRET=your-do-spaces-secret-here
DIGITAL_OCEAN_SPACES_ENDPOINT=your-do-spaces-endpoint-here
DIGITAL_OCEAN_SPACES_BUCKET=your-do-spaces-bucket-here

# JWT Secret
JWT_SECRET=your-secure-jwt-secret-here